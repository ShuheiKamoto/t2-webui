<div class="alert-message block-message info">
  <p style="font-size: xx-large;width:400px;"><strong><%= session[:email] %></strong></p>
</div>
<div class="hero-unit">
  <table id="account">
    <tbody>
    <tr>
      <th class="blue"><%=t 'html_account_text_change_password'%></th>
      <td>
        <%= form_tag({:action => 'password_change'}, {:method => "post", :class => "form-stacked"}) do %>
        <div class="clearfix <%= check_error(@error_message_current_password) %>">
          <label class="blue"><%=t 'html_account_text_current_password'%></label>
          <div class="input">
            <input class="xlarge <%= check_error(@error_message_current_password) %>" id="currentpassword" name="currentpassword" maxlength="30" type="password" placeholder="<%=t 'html_account_text_current_password'%>" />
            <span class="help-inline"><%= @error_message_current_password %></span>
          </div>
        </div>
        <div class="clearfix <%= check_error(@error_message_newpassword) %>">
          <label class="blue"><%=t 'html_account_text_new_password'%></label>
          <div class="input">
            <input class="xlarge <%= check_error(@error_message_newpassword) %>" id="newpassword" name="newpassword" maxlength="30" type="password" placeholder="<%=t 'html_account_text_new_password'%>" />
            <span class="help-inline"><%= @error_message_newpassword %></span>
          </div>
        </div>
        <div class="clearfix  <%= check_error(@error_message_confirmpassword) %>">
          <label class="blue"><%=t 'html_account_text_confirm_new_password'%></label>
          <div class="input">
            <input class="xlarge  <%= check_error(@error_message_confirmpassword) %>" id="confirmpassword" name="confirmpassword" maxlength="30" type="password" placeholder="<%=t 'html_account_text_confirm_new_password'%>" />
            <span class="help-inline"><%= @error_message_confirmpassword %></span>
          </div>
        </div>
        <input type="submit" class="btn success" value="<%=t 'common_static_update' %>">
        <% end %>
      </td>
    </tr>
    <tr>
      <th class="blue"><%=t 'html_account_text_xauth_applications'%></th>
      <td style="padding-left:0px">
      <% @consumer_key_list.each do |consumer_key| %>
        <div class="alert-message block-message info">
        <table>
          <tr>
            <td style="border:none">
              <dl>
                <dt class="blue"><%=t 'html_account_text_application_name'%></dt>
                <dd><%= consumer_key['userSideAppName'] %></dd>
                <dt class="blue"><%=t 'html_account_text_consumer_key'%></dt>
                <dd><%= consumer_key['consumerKey'] %></dd>
                <dt class="blue"><%=t 'html_account_text_consumer_secret'%></dt>
                <dd><%= consumer_key['consumerSecret'] %></dd>
              </dl>
            </td>
            <td style="text-align:right; border:none">
              <%= form_tag({:action => 'delete_application'}, {:method => "post"}) do %>
                <input type="submit" class="btn error" value="<%=t 'common_static_delete' %>">
                <input type="hidden" name="appid" value="<%= consumer_key['userSideAppId'] %>">
              <% end %>
              <%= form_tag({:action => 'update_application_key'}, {:method => "post"}) do %>
                <input type="submit" class="btn success" value="<%=t 'common_static_update' %>">
                <input type="hidden" name="appid" value="<%= consumer_key['userSideAppId'] %>">
                <input type="hidden" name="appname" value="<%= consumer_key['userSideAppName'] %>">
              <% end %>
            </td>
          </tr>
        </table>
        </div>
        <% end %>
        <div class="alert-message block-message info">
        <table>
          <tr>
            <td style="border:none">
              <%= form_tag({:action => 'add_application'}, {:method => "post", :class => "form-stacked", :style => "padding-left: 0px;"}) do %>
              <div class="clearfix <%= check_error(@error_message_new_app_name) %>">
                <label class="blue"><%=t 'html_account_text_new_application_name'%></label>
                <input class="xlarge <%= check_error(@error_message_new_app_name) %>" id="new_application_name" name="new_application_name" maxlength="30" type="text" placeholder="<%=t 'html_account_text_new_application_name'%>" />
                <span class="help-inline"><%= @error_message_new_app_name %></span>
              </div>
            </td>
            <td style="text-align:right; border:none">
              <input type="submit" class="btn primary" value="<%=t 'common_static_add' %>">
            </td>
          </tr>
            <input type="hidden" name="appid" value="hidd">
          <% end %>
        </table>
        </div>
      
      </td>
    </tr>
    </tbody>
  </table>
</div>
