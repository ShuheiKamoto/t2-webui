<div class="hero-unit">
<script src="./jquery-1.7.1.min.js"></script>
<script src="./jquery.tablesorter.min.js"></script>
      <div class="alert-message block-message info">
        <table>
          <tr>
            <td style="border:none">
              <p style="font-size: xx-large;width:400px;"><strong>MyApps</strong></p>
            </td>
            <td style="border:none">
              <a class="btn primary" href="applicationcreate">create</a>
            </td>
          </tr>
        </table>
      </div>
    <table id="myapps" class="zebra-striped">
      <thead>
        <tr>
          <th class="blue header">Application Name</th>
          <th class="blue header">Application Detail</th>
          <th class="blue header">Application WARfile</th>
          <th class="blue header">Application Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @app_list.each do |app| %>
        <tr>
          <td><%= app['name'] %></td>
          <td>
            <%= form_tag({:action => 'detail'}, {:method => "post"}) do %>
              <input type="hidden" name="appid" value="<%= app['id'] %>">
              <input type="submit" class="btn info" value="Detail">
            <% end %>
          </td>
          <td>
            <%= form_tag({:action => 'upload'}, {:method => "post"}) do %>
              <input type="hidden" name="appid" value="<%= app['id'] %>">
              <input type="hidden" name="appname" value="<%= app['name'] %>">
              <input type="submit" class="btn info" value="Upload">
            <% end %>
          </td>
          <td>
            <%= form_tag({:action => 'delete'}, {:method => "post"}) do %>
              <input type="hidden" name="appid" value="<%= app['id'] %>">
              <input type="submit" class="btn error" value="Delete">
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
<script>
$(function() {
$("table#myapps").tablesorter();
});
</script>

</div>