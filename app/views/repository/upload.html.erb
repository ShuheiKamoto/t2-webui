<div class="hero-unit">
  <div class="alert-message block-message info">
    <p style="font-size: xx-large;width:600px;"><strong><%=t 'html_repository_text_upload_title'%>"<%= @app_name %>"</strong></p>
  </div>
  <%= form_tag({:action=>'upload_save'},{:multipart=>true}) do %>
    <div class="clearfix <%= check_error(@error_message_appfile) %>">
      <label for="fileInput"><%=t 'html_repository_text_application_name'%></label>
      <div class="input">
        <%= file_field :warFile, :warFile, :class => 'xlarge ' + check_error(@error_message_appfile) %>
        <span class="help-inline"><%= @error_message_appfile %></span>
      </div>
    </div>
    <div class="actions">
      <input type="submit" class="btn primary" value="<%=t 'common_static_upload'%>">&nbsp;
    </div>
    <input type="hidden" name="appname" value="<%= @app_name %>">
    <input type="hidden" name="appid" value="<%= @app_id %>">
  <% end %>
</div>
